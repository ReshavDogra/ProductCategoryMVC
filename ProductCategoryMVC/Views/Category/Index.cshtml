@model IEnumerable<ProductCategoryMVC.Models.Category>

<h2>Category List</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Add Category</a>
<a asp-action="Index" asp-controller="Product" class="btn btn-info mb-3">View Product List</a>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>CategoryId</th>
            <th>CategoryName</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.CategoryName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@category.CategoryId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@category.CategoryId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .table {
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .table-striped tbody tr:nth-child(odd) {
        background-color: #f9f9f9;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }

    .table thead {
        background-color: #007bff;
        color: white;
    }

    .table .btn {
        margin: 0 5px;
        padding: 5px 10px;
    }

    .btn-primary.mb-3 {
        background-color: #28a745;
        border-color: #28a745;
    }

        .btn-primary.mb-3:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }
</style>
